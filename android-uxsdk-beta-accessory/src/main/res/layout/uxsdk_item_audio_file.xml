<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audio_file_row_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/uxsdk_speaker_row_margin"
    android:paddingBottom="@dimen/uxsdk_speaker_row_margin">


    <TextView
        android:id="@+id/audio_file_name_text_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/uxsdk_speaker_row_height"
        android:layout_marginLeft="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginTop="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginRight="@dimen/uxsdk_speaker_row_margin"
        android:gravity="center_vertical"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/audio_file_play_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/audio_file_play_image_view"
        android:layout_width="@dimen/uxsdk_speaker_row_height"
        android:layout_height="@dimen/uxsdk_speaker_row_height"
        android:layout_marginLeft="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginTop="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginRight="@dimen/uxsdk_speaker_row_margin"
        android:background="@color/uxsdk_gray_45"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@+id/audio_file_name_text_view"
        app:layout_constraintRight_toLeftOf="@+id/audio_file_delete_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uxsdk_ic_speaker_play_not_pressed"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/audio_file_delete_image_view"
        android:layout_width="@dimen/uxsdk_speaker_row_height"
        android:layout_height="@dimen/uxsdk_speaker_row_height"
        android:layout_marginLeft="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginTop="@dimen/uxsdk_speaker_row_margin"
        android:layout_marginRight="@dimen/uxsdk_speaker_row_margin"
        android:background="@color/uxsdk_gray_45"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@+id/audio_file_play_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uxsdk_ic_speaker_loop_inactive"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/uxsdk_speaker_row_margin"
        android:background="@color/uxsdk_white"
        app:layout_constraintTop_toBottomOf="@+id/audio_file_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/uxsdk_ic_close"
        tools:ignore="ContentDescription" />

    <dji.ux.beta.visualcamera.widget.colorwaveform.ColorWaveformView
        android:id="@+id/view_waveform"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageview_exposure_switch"
        app:layout_constraintTop_toBottomOf="@id/imageview_close_button" />

    <ImageView
        android:id="@+id/imageview_color_switch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:src="@drawable/uxsdk_ic_color_waveform_mode_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintRight_toLeftOf="@+id/imageview_exposure_switch"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageview_exposure_switch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:src="@drawable/uxsdk_ic_color_waveform_mode_exposure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription" />

</merge>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="dji.ux.beta.cameracore.widget.gimbalsource.GimbalSourceControlRowView">

    <ImageView
        android:id="@+id/imageview_gimbal_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/uxsdk_gimbal_dot"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_transmission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkbox_transmission"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textview_gimbal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_transmission"
        app:layout_constraintEnd_toStartOf="@+id/checkbox_transmission"
        app:layout_constraintStart_toEndOf="@+id/imageview_gimbal_dot"
        app:layout_constraintTop_toTopOf="@+id/checkbox_transmission"
        tools:text="Gimbal I - Zenmuse XT2" />

    <CheckBox
        android:id="@+id/checkbox_transmission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/uxsdk_transmission"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>
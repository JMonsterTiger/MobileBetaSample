<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:parentTag="dji.ux.beta.cameracore.widget.gimbalpitch.GimbalPitchWidget">

    <ImageView
        android:id="@+id/image_view_gimbal_pitch_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/uxsdk_shape_gimbal_pitch_thumb"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_gimbal_pitch_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:minWidth="30dp"
        android:paddingStart="@dimen/uxsdk_spacing_micro"
        android:paddingLeft="@dimen/uxsdk_spacing_micro"
        android:paddingRight="@dimen/uxsdk_spacing_micro"
        android:paddingEnd="@dimen/uxsdk_spacing_micro"
        tools:background="@drawable/uxsdk_background_gimbal_pitch_text"
        tools:text="-120"
        tools:textColor="@color/uxsdk_black"
        tools:textSize="12sp"
        tools:translationY="50dp" />

</merge>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:parentTag="dji.ux.beta.cameracore.widget.camerashuttersetting.CameraShutterSettingWidget">

    <TextView
        android:id="@+id/widget_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_camera_setting_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/uxsdk_black_30_percent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widget_header" />

    <dji.ux.beta.cameracore.ui.WheelView
        android:id="@+id/widget_wheel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_setting_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        app:uxsdk_centerMarkTextSize="18dp"
        app:uxsdk_cursorHeight="8dp"
        app:uxsdk_intervalFactor="1.7"
        style="@style/UXSDKWheelView"
        app:uxsdk_markTextSize="14dp" />

    <TextView
        android:id="@+id/widget_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@color/uxsdk_blue_highlight"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/view_camera_setting_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        tools:text="2.8"
        tools:visibility="visible" />
</merge>
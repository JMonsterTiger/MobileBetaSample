<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_ev_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uxsdk_camera_exposure_ev_title"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_camera_setting_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/uxsdk_black_30_percent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_ev_title" />

    <ImageView
        android:id="@+id/imageview_ev_setting_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/uxsdk_selector_cycle_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/textview_setting_ev_value"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        app:srcCompat="@drawable/uxsdk_ic_camera_decrement_minus"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textview_setting_ev_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/uxsdk_blue_highlight"
        android:textSize="@dimen/uxsdk_text_size_normal_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageview_ev_setting_plus"
        app:layout_constraintStart_toEndOf="@+id/imageview_ev_setting_minus"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        tools:text="+3.0" />

    <TextView
        android:id="@+id/textview_setting_ev_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/uxsdk_white"
        android:textSize="@dimen/uxsdk_text_size_between_small_tiny"
        app:layout_constraintBottom_toTopOf="@+id/stripeview_setting_ev_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        tools:text="+3.0" />

    <dji.ux.beta.cameracore.ui.StripeView
        android:id="@+id/stripeview_setting_ev_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_setting_ev_status_value"
        app:layout_constraintWidth_percent="0.4" />

    <ImageView
        android:id="@+id/imageview_ev_setting_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/uxsdk_selector_cycle_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toEndOf="@+id/textview_setting_ev_value"
        app:layout_constraintTop_toTopOf="@+id/view_camera_setting_background"
        app:srcCompat="@drawable/uxsdk_ic_camera_increment_plus"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
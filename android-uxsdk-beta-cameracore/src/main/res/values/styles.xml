        <item name="uxsdk_outOfRangeMarkerColor">@color/uxsdk_gray_640</item>
        <item name="uxsdk_cursorHeight">@dimen/uxsdk_wheel_view_cursor_size</item>
        <item name="uxsdk_markTextSize">@dimen/uxsdk_wheel_view_normal_text_size</item>
        <item name="uxsdk_centerMarkTextSize">@dimen/uxsdk_wheel_view_center_text_size</item>
        <item name="uxsdk_wheelType">VALUES_ONLY</item>

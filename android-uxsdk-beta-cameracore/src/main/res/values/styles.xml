<resources>
    <style name="UXSDKGimbalPitchWidgetDefault">
        <item name="uxsdk_labelsTextSize">12sp</item>
        <item name="uxsdk_labelEnabled">true</item>
        <item name="uxsdk_labelsTextColor">@color/uxsdk_black</item>
        <item name="uxsdk_labelsBackground">@drawable/uxsdk_background_gimbal_pitch_text</item>
        <item name="uxsdk_indicatorEndColor">@color/uxsdk_red</item>
        <item name="uxsdk_indicatorHorizontalColor">@color/uxsdk_blue_highlight</item>
        <item name="uxsdk_indicatorNormalColor">@color/uxsdk_white</item>
        <item name="uxsdk_positivePitchBackgroundColor">@color/uxsdk_black</item>
        <item name="uxsdk_linesColor">@color/uxsdk_white</item>
        <item name="uxsdk_horizontalPitchLineColor">@color/uxsdk_red</item>
